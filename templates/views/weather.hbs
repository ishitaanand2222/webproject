<!DOCTYPE html>
<html lang="en">
<head>
  {{>headerlinks}}
</head>
<body>
  {{>navbar}}
  <div class="container-fluid main_header">
    <div class="row">
      <div class="col-mid-10 col-12 mx-auto">
        <div class="main_content">
          <form class="temp_form">
            <input type="text" id="cityName" placeholder="Enter your city name" autocomplete=off>
            <input type="submit" value="search" id="submitBtn">
          </form>
        </div>
        <div class="tempInformation">
          <div class="top_layer">
            <p id=day>Tues</p>
            <p id="today_data">9 june</p>
          </div>
          <div class="main_layer">
            <p id="city_name">Get Output Here</p>
            <div class="middle-layer data_hide">
              <p id="temp"><span>0</span><su>o</su>C</p>
              <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{>footer}}
<script src="js/main.js"></script>
</body>
</html>